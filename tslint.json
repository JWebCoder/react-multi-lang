{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "semicolon": false,
    "quotemark": [true, "single", "avoid-escape"],
    "only-arrow-functions": false,
    "object-literal-sort-keys": false
  },
  "rulesDirectory": []
}